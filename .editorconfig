# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{ts,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 99

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all TS under lib directory
[src/**.ts]
indent_style = space
indent_size = 2
max_line_length = 120

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
